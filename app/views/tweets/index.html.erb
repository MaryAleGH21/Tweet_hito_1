<p id="notice"><%= notice %></p>

<h1 class= "text-center"> Tweets</h1>
<br>
 <form>
 <input name="q" <%= @Tweet %> >
 <button type="submit">Buscar</button>
</form>
 <br>
<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">User</th>
      <th scope="col">Content</th>
      <th scope="col">Photo</th>
      <th scope="col">likes</th>
      <th scope="col">Retweets</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.user.id %></td>
        <td><%= tweet.content_with_hashtag %></td>
        <td><%= image_tag tweet.user.photo,height:100,width:100 %></td>
        <td><%= tweet.likes.count %></td>
        <td><%= link_to "Retweet" %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class = "ml-auto" >
<%= paginate @tweets, :next_label => "mostrar mas Tweets"%>
</div>
<br>
<%= link_to 'New Tweet', new_tweet_path, class:"btn btn-info text-white" %>
</div>


